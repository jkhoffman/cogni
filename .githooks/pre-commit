#!/bin/bash
# Advanced pre-commit hook for Cogni project
set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the middle of a merge/rebase
if [ -e .git/MERGE_HEAD ] || [ -e .git/rebase-merge ] || [ -e .git/rebase-apply ]; then
    echo "âš ï¸  Skipping pre-commit during merge/rebase"
    exit 0
fi

# Get list of staged Rust files
STAGED_RS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -n "$STAGED_RS_FILES" ]; then
    echo "ğŸ“ Checking Rust formatting..."
    cargo fmt --all -- --check

    echo "ğŸ” Running clippy..."
    cargo clippy --all-features --all-targets -- -D warnings

    # Optional: Run quick tests (comment out if too slow)
    # echo "ğŸ§ª Running tests..."
    # cargo test --all-features
fi

# Check for large files
echo "ğŸ“¦ Checking file sizes..."
for file in $(git diff --cached --name-only); do
    if [ -f "$file" ]; then
        size=$(wc -c < "$file")
        if [ $size -gt 1048576 ]; then  # 1MB
            echo "âŒ Error: $file is larger than 1MB ($size bytes)"
            echo "ğŸ’¡ Consider using Git LFS for large files"
            exit 1
        fi
    fi
done

# Check for secrets/private keys
echo "ğŸ” Checking for secrets..."
if git diff --cached --name-only | xargs grep -E "(PRIVATE KEY|SECRET|PASSWORD|API_KEY)" 2>/dev/null; then
    echo "âŒ Error: Possible secret detected in staged files!"
    echo "ğŸ’¡ Please review your changes and remove any sensitive information"
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
